{
    "_comment": "Front AMI using Amazon Linux",
    "variables": {
      "aws_ami_name": "obd-UI-AMI-kwak {{timestamp}}",
      "aws_access_key" : "{{env 'access_key'}}",
      "aws_secret_key" : "{{env 'secret_key'}}",
      "aws_source_ami" : "ami-01288945bd24ed49a",
      "aws_ssh_username" : "ec2-user"
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "ap-northeast-2",
        "source_ami": "{{user `aws_source_ami`}}",
        "instance_type": "t2.micro",
        "ssh_username": "{{user `aws_ssh_username`}}",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Front with Amazon Linux",
        "tags": { 
          "Name": "{{user `aws_ami_name`}}"
        }
      }
    ],
    "provisioners": [
      {
        "type": "ansible",
        
        "playbook_file": "/var/lib/jenkins/workspace/AMI-Build_master/AMI-UI/playbook_front/front.yml" 
      }
    ],
	  "post-processors": [
    {
      "type": "manifest",
      "output": "/var/lib/jenkins/workspace/AMI-Build_master/AMI-UI/uibuild.json",
      "strip_path": true      
    }
  ]
}
  